<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_16">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:progress="25"
            app:trackCornerRadius="8dp"
            app:indicatorColor="@color/yellow"
            app:layout_constraintEnd_toStartOf="@+id/text_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:trackColor="@color/secondary_color"
            />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_8"
            android:text="@string/text_time"
            android:textColor="#007CC5"
            app:layout_constraintTop_toTopOf="@id/progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_phone"
            android:layout_width="46dp"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            app:cardBackgroundColor="@color/secondary_color"
            app:cardCornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="@id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:strokeWidth="1dp" />

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_phone"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_phone"
            app:layout_constraintEnd_toEndOf="@+id/card_phone"
            app:layout_constraintStart_toStartOf="@+id/card_phone"
            app:layout_constraintTop_toTopOf="@+id/card_phone" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_fifty_fifty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/secondary_color"
            app:cardCornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/card_phone"
            app:layout_constraintStart_toEndOf="@+id/card_change_question"
            app:layout_constraintTop_toTopOf="@+id/card_phone"
            />

        <TextView
            android:id="@+id/text_fifty_fifty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:text="50:50"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/card_fifty_fifty"
            app:layout_constraintEnd_toEndOf="@+id/card_fifty_fifty"
            app:layout_constraintStart_toStartOf="@+id/card_fifty_fifty"
            app:layout_constraintTop_toTopOf="@+id/card_fifty_fifty" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_change_question"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:strokeWidth="1dp"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="48dp"
            app:cardBackgroundColor="@color/secondary_color"
            app:cardCornerRadius="24dp"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/card_phone"
            />

        <ImageView
            android:id="@+id/image_change_question"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="1dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_repeat"
            app:layout_constraintBottom_toBottomOf="@+id/card_change_question"
            app:layout_constraintEnd_toEndOf="@+id/card_change_question"
            app:layout_constraintStart_toStartOf="@+id/card_change_question"
            app:layout_constraintTop_toTopOf="@+id/card_change_question" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintVertical_weight="1"
            app:strokeWidth="1dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/primary_color"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            app:cardCornerRadius="@dimen/corner_radius_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_phone"
            />

        <TextView
            android:id="@+id/text_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:text="Question 1 of 15"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <TextView
            android:id="@+id/text_question"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:text="@string/text_question"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView" />
        <!--        cardFirstAnswer-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_first_answer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:strokeWidth="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="@dimen/corner_radius_8"
            app:strokeColor="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            />

        <TextView
            android:id="@+id/text_first_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:elevation="1dp"
            android:gravity="center_horizontal"
            android:text="Label1"
            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@+id/card_first_answer"
            app:layout_constraintStart_toEndOf="@+id/text_number_1"
            app:layout_constraintTop_toTopOf="@+id/card_first_answer" />

        <TextView
            android:id="@+id/text_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:elevation="1dp"
            android:text="1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/card_first_answer"
            app:layout_constraintStart_toStartOf="@+id/card_first_answer"
            app:layout_constraintTop_toTopOf="@+id/card_first_answer" />
<!--        cardSecondAnswer-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_second_answer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:strokeWidth="1dp"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="@dimen/corner_radius_8"
            app:strokeColor="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="@+id/card_first_answer"
            app:layout_constraintStart_toStartOf="@+id/card_first_answer"
            app:layout_constraintTop_toBottomOf="@+id/card_first_answer"
            />

        <TextView
            android:id="@+id/text_second_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:elevation="1dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_4"
            android:text="Label2"
            app:layout_constraintBottom_toBottomOf="@+id/text_number_2"
            app:layout_constraintStart_toEndOf="@+id/text_number_2"
            app:layout_constraintTop_toTopOf="@+id/text_number_2" />

        <TextView
            android:id="@+id/text_number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:text="2"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@+id/card_second_answer"
            app:layout_constraintStart_toStartOf="@+id/card_second_answer"
            app:layout_constraintTop_toTopOf="@+id/card_second_answer" />
<!--        cardThirdAnswer-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_third_answer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:strokeWidth="1dp"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="@dimen/corner_radius_8"
            app:strokeColor="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="@+id/card_second_answer"
            app:layout_constraintStart_toStartOf="@+id/card_second_answer"
            app:layout_constraintTop_toBottomOf="@+id/card_second_answer"
            />
        <TextView
            android:id="@+id/text_third_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:elevation="1dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_4"
            android:text="Label3"
            app:layout_constraintBottom_toBottomOf="@+id/text_number_3"
            app:layout_constraintStart_toEndOf="@+id/text_number_3"
            app:layout_constraintTop_toTopOf="@+id/text_number_3" />

        <TextView
            android:id="@+id/text_number_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:text="3"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@+id/card_third_answer"
            app:layout_constraintStart_toStartOf="@+id/card_third_answer"
            app:layout_constraintTop_toTopOf="@+id/card_third_answer" />


<!--        cardFourthAnswer-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_fourth_answer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:strokeWidth="1dp"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="@dimen/corner_radius_8"
            app:strokeColor="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="@+id/card_third_answer"
            app:layout_constraintStart_toStartOf="@+id/card_third_answer"
            app:layout_constraintTop_toBottomOf="@+id/card_third_answer"
            />
        <TextView
            android:id="@+id/text_fourth_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:elevation="1dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_4"
            android:text="Label3"
            app:layout_constraintBottom_toBottomOf="@+id/text_number_4"
            app:layout_constraintStart_toEndOf="@+id/text_number_4"
            app:layout_constraintTop_toTopOf="@+id/text_number_4" />

        <TextView
            android:id="@+id/text_number_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:text="4"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_4"
            app:layout_constraintBottom_toBottomOf="@+id/card_fourth_answer"
            app:layout_constraintStart_toStartOf="@+id/card_fourth_answer"
            app:layout_constraintTop_toTopOf="@+id/card_fourth_answer" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_submit"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:text="@string/text_submit"
                app:cornerRadius="8dp"
                app:iconGravity="start"
                app:strokeColor="@color/black"
                app:icon="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/card_fourth_answer"
                app:layout_constraintTop_toBottomOf="@+id/card_fourth_answer"
                 />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>