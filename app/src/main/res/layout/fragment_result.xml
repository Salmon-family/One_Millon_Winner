<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_congratulation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_congratulation" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/text_result"
            android:textAlignment="center"
            android:textColor="#373B3F"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottie_congratulation" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_congratulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_congratulation"
            android:textAlignment="center"
            android:textColor="#373B3F"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_result" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_my_result_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/text_my_result_number"
            android:textColor="#373B3F"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_number_question"
            app:layout_constraintEnd_toStartOf="@+id/text_number_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_number_question" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_number_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:gravity="start"
            android:text="  /  10"
            android:textColor="#373B3F"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_my_result_number"
            app:layout_constraintTop_toBottomOf="@id/text_congratulation" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_play_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            style="@style/Widget.Material3.Button.TextButton"
            android:backgroundTint="@color/blue_700"
            android:text="@string/button_play_again"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_back_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_number_question" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/text_back_to_home"
            android:textColor="#373B3F"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>