<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OneMillonWinner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_list</item>
        <item name="android:statusBarColor">@color/splash_screen_color</item>
    </style>

    <style name="chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeColor">@color/gray_700</item>
        <item name="chipSurfaceColor">@color/white</item>
        <item name="chipBackgroundColor">@color/selected_chip</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

</resources>